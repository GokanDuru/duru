@model GokanDuru.Models.IndexViewModel
@{
    ViewBag.Title = "Yönet";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Hesap ayarlarınızı değiştirin</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Şifre:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Şifrenizi değiştirin", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Oluşturmak", "Şifreyi belirle")
            }
            ]
        </dd>
        <dt>Harici Girişler:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Yönet", "ManageLogins") ]
        </dd>
     
        <dt>Kimlik doğrulama:</dt>

    </dl>
</div>
